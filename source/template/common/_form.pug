section.container
  .row
    .col-4.col--centered.col--static
      .login#login
        form.login__form(action="/login" method="post")
         h1 AUTHORIZATION
         .login__row
          input.login__input(type="text" id="login" name="login" placeholder="Login")
          .svg__wrapper
            svg.svg__login
              use(xlink:href="assets/img/sprite.svg#log_in")
         .login__row
          input.login__input(type="password" id="password" name="password" placeholder="Password")
          .svg__wrapper  
            svg.svg__password
              use(xlink:href="assets/img/sprite.svg#pass")
        .login__human
          input.checkbox__input(type="checkbox" name="human" value="I an a human" id="checkbox")
          label.checkbox__label(for="checkbox")  I am not Mr.Robot
            svg.svg__check
              use(xlink:href="assets/img/sprite.svg#check")
        .login__robot
          p Are you sure you are not Mr. Robot?
          input.radio__input(type="radio" name="yes" id="human" value="Yes")
          label.radio.radio__label(for="human") Yes
          input.radio__input(type="radio" name="no" id="robot" value="Not sure")
          label.radio.radio__label(for="robot")  Not sure
        footer.login__footer
          a.login__button.login__button--link(href="/index.html") Main page
          input.login__button.login__button--submit(type="submit" name="submit" value="Login")
block content