include ../../mixins/_svg
include ../../mixins/_inputs

header.header__main
  section.musthead
    .container
      .musthead__flex
        include ../social/_social--header
        +svg("hamburger")
  section.header__body
    .container
      .row
        .col-12
          +svg("portfolio_header")
          .col-4.col--centered
            include ../_user.pug
            .col-1.col--centered
              .arrow__down
                +svg("portf_arrow_down")
  section.header__footer
    .container
      //.row   //A try to impelement the SVg background
      //  .col-12
      //    +svg("bg")
      .row
        .col-12.col--centered

      .row
        .col-12
          .right-angle-arrow.right
          .left-angle-arrow.left
      .row
        .headlines.headlines--portintro
          h1.headlines__title.headlines__title--portintro My pride
          +svg("works_header")
section.portfolio__main
  .container
    .row
      .col-6
        .portfolio__names
          h2.portfolio__names-title ONLINE EDUCATION <br> SCHOOL
          p.portfolio__names-skills HTML, CSS, JAVASCRIPT
          a.portfolio__names-button(href="#") LEARN MORE
      .col-6
        .portfolio__works
          .portfolio__preview
            img.portfolio__work-1(src="/assets/img/portfolio_first.png")
          .portfolio__list
            .portfolio__item.portfolio__item--left
              img.portfolio__work-2(src="/assets/img/portfolio_first.png")
              .portfolio__arrow
                +svg("portf_arrow_down")
            .portfolio__item.portfolio__item--right
              img.portfolio__work-3(src="/assets/img/portfolio_first.png")
              .portfolio__arrow
                +svg("portf_arrow_up")
section.portfolio__aboutme
  .container
    .row
      .headlines.headlines--aboutme
        h1.headlines__title.headlines__title--aboutme Customer <br> satisfaction
        +svg("about_header")
    .row
      aside.quotes
        .col-4
          .quotes__body
            .quotes__photobox
              img.quotes__photo(src="../assets/img/login/Vanya.jpg")
            q.quote
              | This code will overcome any issues. Please, do not load this website
              | on two acient browsers
              img.quote__mark(src="../assets/img/quote.png")
            .quotes__info
              p.quotes__author Kovalchuk Dmitryi
              p.quotes__jobtitle - Founder of LoftSchool
        .col-4
          .quotes__body
            .quotes__photobox
